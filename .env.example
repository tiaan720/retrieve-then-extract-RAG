# Weaviate Configuration
WEAVIATE_URL=http://localhost:8080
COLLECTION_NAME=Document

# Enable binary quantization for 32x memory reduction and faster search
# Compresses vectors from float32 to 1-bit per dimension
# Minimal accuracy loss for most applications
ENABLE_BINARY_QUANTIZATION=false

# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=snowflake-arctic-embed:33m
EMBEDDING_DIMENSIONS=384

# Pipeline Configuration
CHUNK_SIZE=500
CHUNK_OVERLAP=50
